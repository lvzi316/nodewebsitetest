extends layout

block content
  h2= 'List Sync Groups'
  div(class='table-responsive')
    table(class='table table-striped table-hover')
      thead
        tr
          td Name
          td Status
          td CreateDate
      tbody
        each syncgroup in syncgroups
          if syncgroup.status === 'ready'
            tr(class='success')
              td 
                a(href='#{syncgroup.detailurl}') #{syncgroup.name}
              td #{syncgroup.status}
              td #{syncgroup.createby}
          else
            tr
              td 
                a(href='#{syncgroup.detailurl}') #{syncgroup.name}
              td #{syncgroup.status}
              td #{syncgroup.createby}
  a(class='btn btn-primary' role='button' href='/newsyncgroup') New Sync Group
